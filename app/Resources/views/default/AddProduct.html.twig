<div class="container">
    <div class="row">
        
        
        <div class="col-md-12">
        <h2>Product List</h2>
        <div class="table-responsive">

                
   <table id="mytable" class="table table-bordred table-striped">
                   
         <thead>
              <th>Product ID</th>
              <th>Product Name</th>
              <th>Product Model</th>
              <th>Product Decription</th>
              <th>Contact</th>
              <th>Edit</th>
              <th>Delete</th>
          </thead>
   <tbody> 
    {% for post in blog_posts %}
    <td>{{ post.id }}</td>
    <td>{{ post.name }}</td>
    <td>{{ post.price }}</td>
    <td>{{ post.decription }}</td>
    <td>{{ post.approved }}</td>
    <td> <a href="{{ path('editstock', { 'blogPost': post.id }) }}" class="btn btn-primary btn-sm">Edit</a></td>
    <td><a href="{{ path('deletestock', { 'blogPost': post.id }) }}" class="btn btn-danger btn-sm">Delete</a></td>
    <td></td>
    </td>
    </tr>
    {% endfor %}
  
  </tbody>  
        
</table>
<div class="form-group">
  <div class="col-md-4">
    <p data-placement="top" data-toggle="tooltip" title="Add"><input type="button" value="Add Product" id="add" class="btnbtn-primary" data-title="Add" data-toggle="modal"  data-target="#Add"></p>
  </div>
  </div>
<div class="clearfix"></div>
<ul class="pagination pull-right">
  <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
  <li class="active"><a href="#">1</a></li>
