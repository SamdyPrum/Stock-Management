</ul>
                
            </div>
            
        </div>
    </div>
</div>


    
<div class="modal fade" id="Add" tabindex="-1" role="dialog" aria-labelledby="Add" aria-hidden="true">
   <div class="modal-dialog">
   <div class="container" >
   <div class="row">
    <div class="col-md-8 col-md-offset-2" style="margin-top:5px; margin-right: 200px; margin-left: -100px">
        <div class="panel panel-default">
          <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> Add Product</div>
          <div class="panel-body">
            {{ form_start(form) }}
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.decription, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.approved, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-4" style="margin-top:5px; margin-left: 0px;">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-product"></i> Submit
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
    </div>
  </div>
</div>




<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog">
  <div class="container" >
    <div class="row">
    <div class="col-md-8 col-md-offset-2" style="margin-top:5px; margin-right: 200px; margin-left: -100px">
        <div class="panel panel-default">
          <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> Update Product</div>
          <div class="panel-body">
            {{ form_start(form) }}
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.decription, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.approved, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-4" style="margin-top:5px; margin-left: 0px;">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-product"></i> Submit
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
      </div>
    <!-- /.modal-content --> 
  </div>
      <!-- /.modal-dialog --> 
    </div>


 <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
      <div class="modal-dialog">
    <div class="modal-content">
          <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
      </div>
