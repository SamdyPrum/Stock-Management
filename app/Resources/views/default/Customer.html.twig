{% extends 'base.html.twig' %}

{% block body %}
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand">Admin Dashboard</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="http://127.0.0.1:8000/stockmanagement">Stock Management</a></li>
      <li><a href="http://127.0.0.1:8000/user">User Manage</a></li>
      <li><a href="http://127.0.0.1:8000/viewstock">View Stock</a></li>
      <li class="active"><a href="http://127.0.0.1:8000/customermanagement">Coutomer Management</a></li>
      <li><a href="http://127.0.0.1:8000/invoicemanagement">Invoice Management</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <li><a href="http://127.0.0.1:8000/logout"><span class="glyphicon glyphicon-off"></span> Logout</a></li>
      </ul>
  </div>
</nav>
<br>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        
        
        <div class="col-md-12">
        <h2>Customer List</h2>
        <div class="table-responsive">

                
              <table id="mytable" class="table table-bordred table-striped">
                   
                <thead>
              
                  <th>ID</th>
                  <th>Customer Name</th>
                  <th>Email</th>
                  <th>Contact</th>
                  <th>Address</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </thead>
    <tbody>
    
   {% for post in blog_posts %}
    <td>{{ post.id }}</td>
    <td>{{ post.name }}</td>
    <td>{{ post.email }}</td>
    <td>{{ post.contact }}</td>
    <td>{{ post.address }}</td>
    <td> <a href="{{ path('editcustomer', { 'blogPost': post.id }) }}" class="btn btn-primary btn-sm">Edit</a></td>
    <td><a href="{{ path('delete', { 'blogPost': post.id }) }}" class="btn btn-danger btn-sm">Delete</a></td>
    <td></td>
    </td>
    </tr>
    {% endfor %}
   
    
    </tbody>
        
</table>
<div class="form-group">
  <div class="col-md-4">
    <p data-placement="top" data-toggle="tooltip" title="Add"><input type="button" value="Add Customer" id="add" class="btnbtn-primary" data-title="Add" data-toggle="modal"  data-target="#Add"></p>

  </div>
  </div>
<div class="clearfix"></div>
<ul class="pagination pull-right">
  <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
  <li class="active"><a href="#">1</a></li>
  <li><a href="#">2</a></li>
  <li><a href="#">3</a></li>
  <li><a href="#">4</a></li>
  <li><a href="#">5</a></li>
  <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
</ul>
                
            </div>
            
        </div>
    </div>
</div>

<div class="modal fade" id="Add" tabindex="-1" role="dialog" aria-labelledby="Add" aria-hidden="true">
   <div class="modal-dialog">
   <div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2" style="margin-top:5px; margin-right: 200px; margin-left: -100px">
        <div class="panel panel-default">
          <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> Add Customer</div>
          <div class="panel-body">
            {{ form_start(form) }}
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                  {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.contact, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-4" style="margin-top:5px; margin-left: 0px;">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-user"></i> Submit
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
    </div>
  </div>
</div>
    
</body>
</html>

{% endblock %}